{
  "name": "aws-cloudformation-stack-status-checker",
  "version": "2.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.mjs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "style:fix": "prettier --write '**/*.mts'",
    "style:check": "prettier --check '**/*.mts'",
    "eslint:fix": "eslint src/**/*.mts --fix",
    "eslint:check": "eslint src/**/*.mts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "lint": "pnpm run --parallel /^.*:check$/",
    "lint-fix": "pnpm run /^.*:fix$/",
    "all": "pnpm build && pnpm lint-fix && pnpm package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poad/aws-cloudformation-stack-status-checker.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@aws-sdk/client-cloudformation": "^3.632.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.18.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "mjs",
      "mts"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.mts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "engines": {
    "npm": "use pnpm please!",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.7.1+sha512.faf344af2d6ca65c4c5c8c2224ea77a81a5e8859cbc4e06b1511ddce2f0151512431dd19e6aff31f2c6a8f5f2aced9bd2273e1fed7dd4de1868984059d2c4247"
}
