{
  "name": "aws-cloudformation-stack-status-checker",
  "version": "1.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.mjs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.mts'",
    "format-check": "prettier --check '**/*.mts'",
    "lint": "eslint src/**/*.mts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "pnpm build && pnpm format && pnpm lint && pnpm package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poad/aws-cloudformation-stack-status-checker.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@aws-sdk/client-cloudformation": "^3.380.0",
    "json5": "^2.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@typescript-eslint/parser": "^5.62.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.46.0",
    "eslint-plugin-github": "^4.9.2",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.2",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "mjs",
      "mts"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.mts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  }
}
