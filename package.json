{
  "name": "aws-cloudformation-stack-status-checker",
  "version": "2.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.mjs",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "style:fix": "prettier --write '**/*.mts'",
    "style:check": "prettier --check '**/*.mts'",
    "eslint:fix": "eslint src/**/*.mts --fix",
    "eslint:check": "eslint src/**/*.mts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "lint": "pnpm run --parallel /^.*:check$/",
    "lint-fix": "pnpm run /^.*:fix$/",
    "all": "pnpm build && pnpm lint-fix && pnpm package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/poad/aws-cloudformation-stack-status-checker.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@aws-sdk/client-cloudformation": "^3.526.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/parser": "^6.21.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "clearMocks": true,
    "moduleFileExtensions": [
      "js",
      "ts",
      "mjs",
      "mts"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.mts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "verbose": true
  },
  "packageManager": "pnpm@8.7.1",
  "engines": {
    "npm": "use pnpm please!",
    "pnpm": ">=8.7.1"
  }
}
